    "paths": {
        "/categories": {
            "post": {
                "tags": ["Category"],
                "summary": "Criar uma categoria",
                "description": "Criar uma nova categoria",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    }
                                }, 
                                "exemple": {
                                    "name": "Categoria 1",
                                    "description": "Descrição da categoria!"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Categoria já existe"
                    }
                }
            },
            
            "get": {
                "tags": ["Category"],
                "summary": "Listar todas as categorias",
                "description": "Listar todas as categorias",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "aplication/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        }, 
                                        "description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }

            }

        }

    }
}